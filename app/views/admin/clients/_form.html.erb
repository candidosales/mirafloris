<div class="large-12 columns content">
         <%= form_for([:admin, @client], :html => {:class => 'custom row' } ) do |f| %>
         <%= error_messages_for @client %>

          <div class="row">
             <div class="large-12 columns">
               <label>Nome</label>
              <%= f.text_field :nome, :placeholder => "Cliente feliz", :required => true %>
            </div>
          </div>
          <div class="row">
             <div class="large-6 columns">
               <label>E-mail</label>
              <%= f.email_field :email, :placeholder => "exemplo@mirafloris.com", :required => true , :type => "email"  %>
            </div>
             <div class="large-6 columns">
               <label>CPF</label>
              <%= f.text_field :cpf, :placeholder => "999.000.999-11", :required => true ,  :pattern => '\d{3}\.\d{3}\.\d{3}-\d{2}',  :title => "Digite o CPF no formato 999.999.999-11" %>
            </div>
          </div>
          <div class="row">
             <div class="large-6 columns">
               <label>Cidade</label>
              <%= f.text_field :cidade, :placeholder => "Teresina", :required => true  %>
            </div>
             <div class="large-6 columns">
               <label>Telefone</label>
            <%= f.text_field :telefone, :placeholder => "(86)9999-0000", :required => true  , :type => "tel" , :pattern => '[\(]\d{2}[\)]\d{4}[\-]\d{4}', :title => "Digite o número no formato (86)9999-0000, sem espaços" %>
            </div>
          </div>
           <div class="row margin-top">
               <div class="large-3 columns">
                <label class="margin-label">Idade</label>
                <label for="idade" class="small">
                <%= f.radio_button :idade, '18-25', :checked => true %>
                  <span class="custom radio checked"></span> 
                18 - 25 anos</label>
                <label for="idade" class="small">
                <%= f.radio_button :idade, '26-30'%>
                  <span class="custom radio "></span> 
                26 - 35 anos</label>
                <label for="idade" class="small">
                <%= f.radio_button :idade, '36-50'%>
                  <span class="custom radio "></span> 
                36 - 50 anos</label>
                <label for="idade" class="small">
                <%= f.radio_button :idade, '+50'%>
                  <span class="custom radio "></span> 
                + 50 anos</label>
               </div>
               <div class="large-3 columns">
                <label class="margin-label">Sexo</label>
                <label for="sexo" class="small">
                <%= f.radio_button :sexo, 'm', :checked => true %>
                  <span class="custom radio checked"></span> 
                Masculino</label>
                <label for="sexo" class="small">
                <%= f.radio_button :sexo, 'f'%>
                  <span class="custom radio "></span> 
                Feminino</label>
               </div>
               <div class="large-3 columns">
                <label class="margin-label">Estado Civil</label>
                <label for="estado_civil" class="small">
                <%= f.radio_button :estado_civil, 'solteiro', :checked => true, :class => 'estado_civil' %>
                  <span class="custom radio checked"></span> 
                Solteiro</label>
                <label for="estado_civil" class="small">
                <%= f.radio_button :estado_civil, 'casado', :class => 'estado_civil'%>
                  <span class="custom radio "></span> 
                Casado</label>
               </div>
               <div class="large-3 columns">
                <label class="margin-label">Renda Familiar</label>
                <label for="renda_familiar" class="small">
                <%= f.radio_button :renda_familiar, '3', :checked => true %>
                  <span class="custom radio checked"></span> 
                Até 3 salários</label>
                <label for="renda_familiar" class="small">
                <%= f.radio_button :renda_familiar, '3-6'%>
                  <span class="custom radio"></span> 
                De 3 à 6 salários</label>
               </div>
           </div>
          <div class="large-12 columns conjugue">
            <h4>Cônjugue</h4>
           <div class="row">
               <div class="large-12 columns">
                 <label>Nome</label>
                <%= f.text_field :conjugue_nome, :placeholder => "Seu cônjugue" %>
              </div>
            </div>
            <div class="row">
              <div class="large-6 columns">
                 <label>E-mail</label>
                <%= f.email_field :conjugue_email, :placeholder => "cônjugue@mirafloris.com", :type => "email"  %>
              </div>
               <div class="large-6 columns">
                 <label>CPF</label>
                <%= f.text_field :conjugue_cpf, :placeholder => "999.000.999-11", :pattern => '\d{3}\.\d{3}\.\d{3}-\d{2}',  :title => "Digite o CPF no formato 999.999.999-11" %>
              </div>
            </div>
            <div class="row">
               <div class="large-6 columns">
                <label class="margin-label">Sexo</label>
                <label for="sexo" class="small">
                <%= f.radio_button :conjugue_sexo, 'm' %>
                  <span class="custom radio"></span> 
                Masculino</label>
                <label for="sexo" class="small">
                <%= f.radio_button :conjugue_sexo, 'f', :checked => true %>
                  <span class="custom radio checked"></span> 
                Feminino</label>
               </div>
            </div>
          </div>
          <div class="row">
            <div class="large-4 large-centered columns">
              <%= f.button "Enviar", :class => "large button success round expand"%>
            </div>
          </div>
        <% end %>
      </div>