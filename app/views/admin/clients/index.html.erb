<h1>Listing clients</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Cidade</th>
    <th>Telefone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.nome %></td>
    <td><%= client.email %></td>
    <td><%= client.cidade %></td>
    <td><%= client.telefone %></td>
    <td><%= link_to 'Show', [:admin, client] %></td>
    <td><%= link_to 'Edit', edit_admin_client_path(client) %></td>
    <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

